<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:background="@android:color/white">


    <ImageView
        android:layout_marginTop="52dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        />


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/email"
        android:layout_marginTop="64dp"
        android:layout_width="342dp"
        android:layout_height="64dp"
        android:clipToOutline="true"
        android:background="@drawable/input">

        <TextView
            android:id="@+id/email_f"
            android:layout_width="42dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:text="이메일"
            android:textColor="#667085"
            android:textAppearance="@style/lable_medium"
            android:lineSpacingExtra="5sp"
            android:gravity="center_vertical"
            />
        <EditText
            android:id="@+id/idEdt"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:background="@android:color/transparent"
            android:layout_width="310dp"
            android:layout_height="64dp"
            android:hint="이메일을 입력해주세요"
            android:textColor="#000000"
            android:textColorHint="#667085"
            android:textAppearance="@style/lable_large"
            android:inputType="textEmailAddress"/>
    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/password"
        android:layout_marginTop="8dp"
        android:layout_width="342dp"
        android:layout_height="64dp"
        android:clipToOutline="true"
        android:background="@drawable/input">

        <TextView
            android:id="@+id/password_f"
            android:layout_width="52dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:text="비밀번호"
            android:textColor="#667085"
            android:textAppearance="@style/lable_medium"
            android:lineSpacingExtra="5sp"
            android:gravity="center_vertical"
            />
        <EditText
            android:id="@+id/passwordEdt"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:background="@android:color/transparent"
            android:layout_width="310dp"
            android:layout_height="64dp"
            android:hint="비밀번호를 입력해주세요"
            android:textColor="#000000"
            android:textColorHint="#667085"
            android:textAppearance="@style/lable_large"
            android:inputType="textPassword"/>
    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginTop="40dp"
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/btn"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인"
            android:textAppearance="@style/button_medium"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호를 잊으셨나요?"
        android:textAppearance="@style/button_small"
        android:textColor="#55B746"
        android:layout_marginTop="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/signUpCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계정이 없으신가요?"
            android:textAppearance="@style/body_medium"
            android:textColor="#667085"
            />

        <TextView
            android:layout_marginLeft="8dp"
            android:id="@+id/SignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textAppearance="@style/button_small"
            android:textColor="#55B746"
            />
    </LinearLayout>

</LinearLayout>